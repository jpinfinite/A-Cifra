# Headers para Cloudflare Pages
# Otimização de cache e performance

# Cache de imagens (1 ano)
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  
/*.avif
  Cache-Control: public, max-age=31536000, immutable
  
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  
/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  
/*.png
  Cache-Control: public, max-age=31536000, immutable

# Cache de assets estáticos (1 ano)
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache de JavaScript e CSS (1 ano)
/*.js
  Cache-Control: public, max-age=31536000, immutable
  
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache de fontes (1 ano)
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# HTML - cache curto para atualizações frequentes
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Página inicial
/
  Cache-Control: public, max-age=3600, must-revalidate

# Security headers
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: interest-cohort=()

# Preconnect para recursos externos
/*
  Link: <https://fonts.googleapis.com>; rel=preconnect; crossorigin
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin
  Link: <https://www.googletagmanager.com>; rel=preconnect
  Link: <https://pagead2.googlesyndication.com>; rel=preconnect
