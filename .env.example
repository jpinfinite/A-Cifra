# ===================================
# VARIÁVEIS DE AMBIENTE - A CIFRA
# ===================================

# Cloudflare AI (para geração de imagens)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# GitHub (para automação via Actions)
GITHUB_TOKEN=your_github_personal_access_token_here

# Resend (para envio de newsletters - opcional)
RESEND_API_KEY=your_resend_api_key_here

# Telegram (para notificações - opcional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook (alternativa ao Telegram - opcional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Google Trends API (opcional - melhora monitor de tendências)
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Configurações gerais
NODE_ENV=production
SITE_URL=https://a-cifra.com.br
